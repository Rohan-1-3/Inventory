<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <%- include('../navbar') %>
  <h1><%= title %></h1>
  <a href="/game/create">
    <button class="btn">Add a new game</button>
  </a>
  
  <% if (games && games.length > 0) { %>
      <div class="games-container">
        <% games.forEach(function(game) { %>
          <div class="game-card">
            <div class="game-cover">
              <img src="<%= game.cover_page_url %>" alt="<%= game.title %> Cover">
            </div>
            <div class="game-info">
              <a href="/game/<%= game.game_id %>"><h2><%= game.title %></h2></a>
              <p><%= game.game_description %></p>
              <p><strong>Rating:</strong> <%= game.rating %> ‚≠ê</p>
              <p><strong>Status:</strong> <%= game.status %></p>
            </div>
  
            <div class="action-buttons">
              <a href="/game/edit/<%= game.game_id %>" class="btn edit-btn">Edit</a>
              <form action="/game/delete/<%= game.game_id %>" method="POST" onsubmit="return confirm('Delete this game?');">
                <button type="submit" class="btn delete-btn">Delete</button>
              </form>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <p>No games available.</p>
    <% } %>  
</body>
</html>